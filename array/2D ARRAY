#include<iostream>
#include<limits.h>
using namespace std;
//TO SEARCH FOR AN ELEMENT IN A 2-D ARRAY
bool search(int arr[][4],int rowsize,int colsize,int target){
    for(int r=0;r<rowsize;r++){
        for(int c=0;c<colsize;c++){
            if(arr[r][c]==target){
                return true;
            }
        }
    }
    return false;
}
//TO FIND THE MINIMUM VALUE 
int minimumvalue(int arr[][4],int rowsize,int colsize){
    int minimum=INT_MAX;
    for(int r=0;r<rowsize;r++){
        for(int c=0;c<colsize;c++){
            minimum = min(arr[r][c],minimum);
        }
    }
    return minimum;
}    
//TO FIND THE MAXIMUM VALUE
int maxvalue(int arr[][4],int rowsize,int colsize){
    int maximum=INT_MIN;
    for(int r=0;r<rowsize;r++){
        for(int c=0;c<colsize;c++){
            maximum= max(arr[r][c],maximum);
        }
    }
    return maximum;
}
//TO FIND THE SUM ROW-WISE
void rowsum(int arr[][4],int rowsize,int colsize){
    for(int r=0;r<rowsize;r++){
        int sum=0;
        //har row mein enter krenge and then column wise print krenge
        for(int c=0;c<colsize;c++){
            sum=sum+arr[r][c];
        }
        //jab saare elements add kr liye uske baad print krlenge
        cout<<sum<<endl;
    }
}
//TO FIND COLUMN WISE SUM
void colsum(int arr[][4],int rowsize,int colsize){
    
    for(int c=0;c<colsize;c++){
        //column mein aagye ab row wise jayenge
        int sum1=0;
        for(int r=0;r<rowsize;r++){
            sum1=sum1+arr[r][c];
        }
        cout<<"the sum of column "<< c <<" is:"<< sum1 <<endl;
    }
}
int main(){
    int rowsize=3;
    int colsize=4;
    int arr[3][4]={
                  {-1,20,30,40},
                  {50,60,70,800},
                  {21,22,23,24}
                  };
    bool ans=search(arr,rowsize,colsize,23);
    cout<<ans<<endl;
    int ans2= minimumvalue(arr,rowsize,colsize);
    cout<<ans2<<endl;
    int ans3=maxvalue(arr,rowsize,colsize);
    cout<<ans3<<endl;
    rowsum(arr,rowsize,colsize);
    colsum(arr,rowsize,colsize);
}
    
