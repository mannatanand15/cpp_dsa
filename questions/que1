//sum and average of numbers using array
#include<iostream>
#include<stdio.h>
using namespace std;
int main(){
    int n;
    int sum=0;
    cin>>n;
    int arr[n]; //setting the limit for array
    for(int i=0;i<n;i++){
        cin>>arr[i];        //input of array values
    }
    for(int i=0;i<n;i++){
        sum+=arr[i];
    }
    float avg;
    avg=(float)sum/n;
    cout<<"Sum="<<sum<<endl;
    cout<<"Average="<<avg<<".0"<<endl;
}

